@import "kouto-swiss"
@import "helpers"
@import "swiper"

// ******************************************************

// FONTS

@import "fonts"

// ******************************************************

// ICONS FONTS

// ** https://genericons.com WP icon font set
// @import "fonts/icons/genericons"

// ** minimal version of Google Materialize UI icons. check the styl for usage
@import "fonts/icons/materialize-min"

// ** full set of Google Materialize. https://design.google.com/icons/
// @import "fonts/icons/materialize"

// ******************************************************

meyer-reset()
box-sizing-reset()
normalize()

// ******************************************************

// VARIABLES

$golden-ratio = 1.61803398875

$font-size-basic = 16px
$font-size-larger = 1.3rem
$font-size-h4 = golden-ratio(1rem , .7)
$font-size-h3 = golden-ratio(1rem , .8)
$font-size-h2 = golden-ratio(1rem , 1)
$font-size-h1 = golden-ratio(1rem , 1.2)

$font-leading-basic = 1.45
$font-leading-tighter = 1.25
$font-leading-larger = 1.55

$font-tracking-basic = 0.001em
$font-tracking-wider = 0.05em

$font-sans = 'Calibre', Helvetica, Arial, sans-serif
$font-serif = 'Tiempos', Times, Baskerville, Georgia, serif

$color-black-soft = rgb(14, 14, 14)
$color-white-soft = rgb(253, 253, 253)

$border = 3px solid $color-black-soft

$basic-animation-speed = 600
$fast-animation-speed = $basic-animation-speed / 2

// ******************************************************

.only-desktop
  display: none

.only-mobile
  display: initial

// GRID

$cols = 12
$gutter = 24px

.container
  margin: 0 auto
  width: 320px

.row
  box-sizing: border-box
  display: flex
  flex: 0 1 auto
  flex-direction: row
  flex-wrap: wrap
  &.reverse
    flex-direction: row-reverse

// FLEX POSITIONING

.justify-start
  justify-content: flex-start

.justify-center
  justify-content: center

.justify-end
  justify-content: flex-end

.align-start
  align-items: flex-start

.align-center
  align-items: center

.align-end
  align-items: flex-end

.align-content-start
  align-content: flex-start

.align-content-center
  align-content: center

.align-content-end
  align-content: flex-end

// COLUMN SIZES & OFFSETS

.col
  flex: 1 1 auto
  box-sizing: border-box
  max-width: 100%
  padding: 0 ($gutter / 2)

.col-no-gutter
  padding-left: 0
  padding-right: 0

for offset in 0..($cols - 1)
  .offset-s-{offset}
    margin-left: ( 100% / $cols ) * offset

for col in 1..$cols
  .col-s-{col}
    flex-basis: ( 100% / $cols ) * col
    max-width: ( 100% / $cols ) * col

@import "responsive/mobile"

@media screen and (min-width: 760px)

  .only-desktop
    display: initial

  .only-mobile
    display: none

  .container
    width: 760px

  $gutter = 32px

  // COLUMN SIZES & OFFSETS

  .col
    padding: 0 ($gutter / 2)

  for offset in 0..($cols - 1)
    .offset-m-{offset}
      margin-left: ( 100% / $cols ) * offset

  for col in 1..$cols
    .col-m-{col}
      flex-basis: ( 100% / $cols ) * col
      max-width: ( 100% / $cols ) * col

  @import "responsive/tablet"

@media screen and (min-width: 1024px)

  .container
    width: 1024px

@media screen and (min-width: 1280px)

  .container
    width: 1280px

  $gutter = 48px

  // COLUMN SIZES & OFFSETS

  .col
    padding: 0 ($gutter / 2)

  for offset in 0..($cols - 1)
    .offset-l-{offset}
      margin-left: ( 100% / $cols ) * offset

  for col in 1..$cols
    .col-l-{col}
      flex-basis: ( 100% / $cols ) * col
      max-width: ( 100% / $cols ) * col

  @import "responsive/desktop"

@media screen and (min-width: 1366px)

  .container
    width: 1366px

@media screen and (min-width: 1680px)

  .container
    width: 1680px

@media screen and (min-width: 1920px)

  .container
    width: 1920px

  $gutter = 54px

  // COLUMN GUTTER

  .col
    padding: 0 ($gutter / 2)

  @import "responsive/large"

// ******************************************************

// TYPOGRAPHY

html
  font-family: $font-sans
  font-size: $font-size-basic
  letter-spacing: $font-tracking-basic

body
  line-height: $font-leading-basic

  // HTML ELEMENT STYLING

h1, h2, h3, h4
  line-height: $font-leading-tighter

h1
  font-family: $font-sans
  font-size: $font-size-h1
  font-weight: bold

h2
  font-family: $font-sans
  font-size: $font-size-h2
  font-weight: bold

h3
  font-family: $font-sans
  font-size: $font-size-h3

h4
  font-size: $font-size-h4

p
  font-family: $font-serif
  margin-bottom: 1rem

  // FONT RULES

.font-italic
  font-style: italic

.font-bold
  font-weight: bold

.font-small-caps
  font-size: 0.85em
  text-transform: uppercase

.font-larger
  font-size: $font-size-larger

.font-capitalize
  text-transform: capitalize

.font-uppercase
  text-transform: uppercase

.font-sans
  font-family: $font-sans

.font-serif
  font-family: $font-serif

  // TEXT RULES

.text-overflow-ellipsis
  overflow: ellipsis

.text-align-left
  text-align: left

.text-align-right
  text-align: right

.text-align-center
  text-align: center

  // LINKS

a,
a:active,
a:visited
  color: inherit
  text-decoration: none

// ******************************************************

// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

img
  max-width: 100%
  height: auto

// ******************************************************

// HEADER

#header
  position: fixed
  top: 0
  width: 100%
  z-index: 1000
  line-height: 1
  h1
    font-size: $font-size-h3
    margin: 0

#header-menu
  li
    &:after
      content: ', '
    &:last-of-type:after
      content: ''

// ******************************************************

// FOOTER

#footer
  position: fixed
  bottom: 0
  width: 100%
  z-index: 1000
  line-height: 1
  h1
    font-size: $font-size-h3
    margin: 0

// ******************************************************

// HOME
#home-holder 
  pointer-events: none
  &:hover
    .attachment-home-thumb
      opacity: 0
    .home-item-image-holder
      border: $border
  .home-item
    pointer-events: auto
    width: 50%
    .attachment-home-thumb
      display: block
    a
      display: inline-block
      cursor: pointer 
    &:hover
      .attachment-home-thumb
        opacity: 1
      .home-item-image-caption
        opacity: 1
      .home-item-image-holder
        border: 3px solid transparent



.home-item-image-holder
  margin: 0 auto
  border: 3px solid transparent
  max-width: 80%
  img 
    max-height: 400px
    width: auto

.home-item-image-caption
  opacity: 0
  transition: opacity $fast-animation-speed

// ******************************************************

// INDEX

.more-link
  font-family: $font-sans
  
// ******************************************************

// PROGRAMACION

.swiper-slide
  cursor: pointer
