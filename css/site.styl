@import "kouto-swiss"

@import "swiper"
@import "helpers"
@import "fonts"

meyer-reset()
box-sizing-reset()
normalize()

// ******************************************************

// GRID

$cols = 12
$col = 72px
$gutter = 22px

.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)

.row
  clearfix()

.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  min-height: 1px

for col in 1..$cols
  .col-{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

    // FLUID COLS

.percent-col
  float: left
  box-sizing: border-box

$pcols = 10

for pcol in 1..$pcols
  .s-into-{pcol}
    width: ( 100% / pcol )

@media screen and (min-width: 601px)

  for pcol in 1..$pcols
    .m-into-{pcol}
      width: ( 100% / pcol )

@media screen and (min-width: 993px)

  for pcol in 1..$pcols
    .l-into-{pcol}
      width: ( 100% / pcol )

// ******************************************************

// VARIABLES

$golden-ratio = 1.61803398875

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-micro = ($gutter / (2 * $golden-ratio))
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 16px
$font-size-larger = golden-ratio(1rem , 1.3)
$font-size-smaller = 0.8em
$font-size-huge = 6rem

$font-size-h3 = golden-ratio(1rem , 1)
$font-size-h2 = golden-ratio(1rem , 1.5)
$font-size-h1 = golden-ratio(1rem , 2)

$font-leading-basic = 1.35
$font-leading-tighter = 1.15
$font-leading-larger = 1.45

$font-tracking-basic = 0.001em
$font-tracking-wider = 0.05em

$font-sans = 'Calibre', Helvetica, Arial, sans-serif
$font-serif = 'Tiempos', Times, Baskerville, Georgia, serif

$color-black-soft = rgb(14, 14, 14)
$color-white-soft = rgb(253, 253, 253)
$color-red = rgb(253, 20, 20)

$basic-animation-speed = 500ms

// ******************************************************

// TYPOGRAPHY

html
  font-family: $font-serif
  font-size: $font-size-basic
  letter-spacing: $font-tracking-basic

body
  line-height: $font-leading-basic

  // HTML ELEMENT STYLING

h1
  font-size: $font-size-h1
  font-family: $font-sans
  line-height: $font-leading-tighter

h2
  font-size: $font-size-h2
  font-family: $font-sans
  line-height: $font-leading-tighter

h3
  font-size: $font-size-h3
  font-family: $font-sans

h4.font-sans
  font-size: 1.15rem

p
  margin-bottom: 1rem

  // FONT RULES

.font-italic, i, em
  font-style: italic

.font-bold, b, strong
  font-weight: bold

.font-leading-zero
  line-height: 1

.font-larger
  font-size: $font-size-larger

.font-huge
  font-size: $font-size-huge

.font-smaller
  font-size: $font-size-smaller

.font-small-caps
  font-size: 0.85em
  text-transform: uppercase

.font-capitalize
  text-transform: capitalize

.font-uppercase
  text-transform: uppercase

.font-underline
  text-decoration: underline

.font-sans
  font-family: $font-sans

.font-serif
  font-family: $font-serif

.font-color-white
  color: $color-white-soft

  // TEXT RULES

.text-overflow-ellipsis
  overflow: ellipsis

.text-align-left
  text-align: left

.text-align-right
  text-align: right

.text-align-center
  text-align: center

  // LINKS

a,
a:active,
a:visited
  color: inherit
  text-decoration: none

// ******************************************************

// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

img
  max-width: 100%
  height: auto

.ui-arrow
  svg
    height: 1rem
    width: 1rem

#main-container
  width: 100%
  margin-bottom: $margin-large + $margin-mid

.only-mobile
  display: none

// ******************************************************

// MARGINS AND PADDING

  // MARGIN TOP

.margin-top-micro
  margin-top: $margin-micro

.margin-top-tiny
  margin-top: $margin-tiny

.margin-top-small
  margin-top: $margin-small

.margin-top-basic
  margin-top: $margin-basic

.margin-top-mid
  margin-top: $margin-mid

.margin-top-large
  margin-top: $margin-large

  // MARGIN BOTTOM

.margin-bottom-micro
  margin-bottom: $margin-micro

.margin-bottom-tiny
  margin-bottom: $margin-tiny

.margin-bottom-small
  margin-bottom: $margin-small

.margin-bottom-basic
  margin-bottom: $margin-basic

.margin-bottom-mid
  margin-bottom: $margin-mid

.margin-bottom-large
  margin-bottom: $margin-large

  // PADDING TOP

.padding-top-micro
  padding-top: $margin-micro

.padding-top-tiny
  padding-top: $margin-tiny

.padding-top-small
  padding-top: $margin-small

.padding-top-basic
  padding-top: $margin-basic

.padding-top-mid
  padding-top: $margin-mid

.padding-top-large
  padding-top: $margin-large

  // PADDING BOTTOM

.padding-bottom-micro
  padding-bottom: $margin-micro

.padding-bottom-tiny
  padding-bottom: $margin-tiny

.padding-bottom-small
  padding-bottom: $margin-small

.padding-bottom-basic
  padding-bottom: $margin-basic

.padding-bottom-mid
  padding-bottom: $margin-mid

.padding-bottom-large
  padding-bottom: $margin-large

// ******************************************************

// HEADER

#header
  position: fixed
  top: 0
  width: 100%
  z-index: 9999

.menu-item
  padding: $margin-micro $margin-tiny
  margin: 0 $margin-tiny

// ******************************************************

// SPLASH

#splash
  position: fixed
  width: 100%
  height: 100vh
  top: 0
  left: 0
  color: $color-white-soft
  overflow: hidden
  z-index: 800

#splash-container
  position: absolute
  width: 100%
  height: 100%

#splash-text
  padding: 5%
  min-height: 100vh
  max-width: 2000px
  margin: 0 auto

#splash-top
  position: absolute
  width: 100%
  top: $margin-small

#splash-bottom
  position: absolute
  width: 100%
  bottom: $margin-small

#scroll-buffer
  position: absolute
  width: 100%
  height: 100%
  top: 0
  left: 0
  z-index: 1000
  pointer-events: none

// ******************************************************

// FRONT PAGE

.home-programacion-height-fix
  min-height: 60vh


// ******************************************************

// PAGE

.page
  .col-4
    .copy
      max-width: 300px
      margin: 0 auto

#page-key-color-image
  min-height: 450px

// ******************************************************

// PROGRAMACION SINGLE

.copy
  h1, h2, h3, h4, h5, h6, blockquote
    text-align: center
    margin-top: $margin-basic
    margin-bottom: $margin-basic

// ******************************************************

// KEY COLOR IMAGE

.image-key-color-holder
  position: relative
  filter: saturate(1.7)

.image-key-color
  height: 100%
  width: 100%
  position: absolute
  background-size: cover
  background-position: center
  background-blend-mode: screen
  opacity: .8
  filter: grayscale(1)
  transition: opacity $basic-animation-speed, filter $basic-animation-speed
  &:hover
    opacity: 1
    filter: grayscale(0)

// ******************************************************

// PROGRAMACION ARCHIVE

.index-programacion-post-container
  height: 300px
  max-width: 220px
  margin-left: auto
  margin-right: auto

.index-programacion-post-number
  height: 100%
  width: 100%
  position: absolute
  font-size: golden-ratio(1rem , 3)
  pointer-events: none

// ******************************************************

// SWIPER

.swiper-controls
  display: flex
  flex-direction: row
  flex-wrap: nowrap
  justify-content: space-between
  align-items: center

.swiper-navigation
  display: flex
  justify-content: space-between

.swiper-button-prev, .swiper-button-next
  background: none
  width: initial
  padding: 0 $margin-small
  line-height: .7
  svg
    height: .7rem
    width: .5rem

// ******************************************************

// FOOTER

#footer-above
  position: absolute
  top: -2.5rem
  width: 100%

#footer-title
  margin: 0

#footer-language-switcher
  position: absolute
  right: $margin-small
  text-align: right
  bottom: .5rem
  width: 10%
  li
    color: $color-black-soft
    display: inline-block
    padding-right: $margin-tiny

#close-footer
  display: none

#footer
  position: fixed
  z-index: 500
  width: 100%
  bottom: -100vh
  transition: bottom $basic-animation-speed
  &.active
    bottom: 0 !important
    #close-footer
      display: block
    #open-footer
      display: none
  svg
    fill: $color-white-soft
    height: 2rem

#mce-EMAIL
  background-color: transparent
  border: 0
  border-bottom: solid 1px $color-white-soft
  outline: 0

#subscribe-arrow
  display: inline-block
  vertical-align: bottom
  margin-left: - $margin-tiny
  padding: 0
  border: none
  background: none
  &:focus
    outline: none
  svg
    height: 1.3rem
    width: 1.8rem

#footer-social-links
  li
    padding: 0 $margin-tiny

#footer-text
  max-width: 300px
  margin-left: auto
  margin-right: auto

#footer-contact-text
  max-width: 180px
  margin-left: auto
  margin-right: auto

// ******************************************************

// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))

  @import "responsive/desktop-mid"

@media screen and (max-width: 1010px)

  @import "responsive/tablet"

@media screen and (max-width: 601px)

  @import "responsive/mobile"
