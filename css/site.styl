@import "kouto-swiss"
@import "fonts"

@import "sanitize"
@import "helpers"

meyer-reset()
box-sizing-reset()
normalize()

$cols = 12
$col = 70px
$gutter = 16px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
  min-height: 1px

for col in 1..$cols
  .col-{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// FLUID COLS
.percent-col
  float: left
  box-sizing: content-box
$pcols = 10
for pcol in 1..$pcols
  .s-into-{pcol}
    width: ( 100% / pcol )

@media screen and (min-width: 601px)

  for pcol in 1..$pcols
    .m-into-{pcol}
      width: ( 100% / pcol )

@media screen and (min-width: 993px)

  for pcol in 1..$pcols
    .l-into-{pcol}
      width: ( 100% / pcol )

// VARIABLES

$golden-ratio = 1.61803398875

$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)

$font-size-basic = 15px
$font-leading-basic = 1.5em
$font-tracking-basic = 0.001em

$color-black-soft = rgb(14,14,14)
$color-white-soft = rgb(253,253,253)
$color-red = #ef5249

$font-sans = 'Calibre', helvetica, arial, sans-serif
$font-serif = 'Tiempos', serif

// TYPOGRAPHY

body
  font-family: $font-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1,h2,h3,h4,h5,h6
  font-family: $font-sans
  font-weight: normal
  line-height: $font-leading-basic

h1
  font-size: 5em

h2
  font-size: 2em

h3
  font-size: 1.2em

h4
  font-size: 1em

p
  margin-bottom: 1em

.font-red
  color: $color-red

.font-sans
  font-family: $font-sans


// LINKS

a,a:active,a:visited
  color: inherit
  transition: opacity .2s
  cursor: pointer
  &:hover
    opacity: .5

a,a:active,a:visited > h1
  &:hover
    opacity: 1
    color: $color-red

// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft
  min-height: 100%

img
  max-width: 100%
  height: auto

.row
  margin-bottom: $margin-basic

// SPLASH
#splash
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0
  background-color: $color-red
  color: $color-white-soft
  overflow: hidden
  z-index: 800
  font-family: $font-sans
  font-size: 1em
  cursor: pointer

#splash-container
  position: absolute
  width: 100%
  height: 100%

.splash-text
  padding: 5%
  font-size: 6em
  line-height: 1

#scroll-buffer
  position: absolute
  width: 100%
  height: 100%
  top: 0
  left: 0
  z-index: 1000
  pointer-events: none

// NAV
nav
  font-family: $font-sans
  -webkit-font-smoothing: antialiased

#main-container nav
  position: fixed
  color: $color-red

#splash-container nav
  position: absolute

.nav-top
  top: $margin-basic
  left: 0
  width: 100%
  text-align: center
  font-size: 2em
  font-weight: bold

.nav-top-right
  top: $margin-basic
  right: $margin-basic
  font-size: 1.3em

.lang
  padding: ( $margin-small / 2 )

.nav-bottom
  bottom: $margin-basic
  left: 0
  width: 100%
  text-align: center
  font-size: 2em
  font-weight: bold


// TOP CONTENT
section#content-1
  height: 100vh

.match-height
  position: relative

.align-bottom
  position: absolute
  bottom: 0
  width: 100%


// CONTENT
#main-container
  width: 100%
  position: fixed // keeps it in place during splash scroll
  z-index: 600 // under splash and nav


// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))

  $col = 64px
  $gutter = 14px
  .container
    margin: 0 auto
    width: ($col * $cols)+($gutter * $cols)
  .col
    margin-left: ($gutter/2)
    margin-right: ($gutter/2)

  for col in 1..$cols
    .col-{col}
      width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// Small grid break for mobile
@media screen and (max-width: 940px)

  .container
    width: 95%
  .col
    width: 100%
    margin-left: ($gutter/2)
    margin-right: ($gutter/2)
    box-sizing: content-box
    min-height: 1px
