$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-micro = ($gutter / (2 * $golden-ratio))
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-h4 = golden-ratio(1rem , .5)
$font-size-h3 = golden-ratio(1rem , .6)
$font-size-h2 = golden-ratio(1rem , .7)
$font-size-h1 = golden-ratio(1rem , .8)

h1, .font-size-h1 
  font-size: $font-size-h1

h2, .font-size-h2
  font-size: $font-size-h2

h3, .font-size-h3
  font-size: $font-size-h3

h4, .font-size-h4
  font-size: $font-size-h4

// ******************************************************

// MARGINS AND PADDING

  // MARGIN TOP

.margin-top-micro
  margin-top: $margin-micro

.margin-top-tiny
  margin-top: $margin-tiny

.margin-top-small
  margin-top: $margin-small

.margin-top-basic
  margin-top: $margin-basic

.margin-top-mid
  margin-top: $margin-mid

.margin-top-large
  margin-top: $margin-large

  // MARGIN BOTTOM

.margin-bottom-micro
  margin-bottom: $margin-micro

.margin-bottom-tiny
  margin-bottom: $margin-tiny

.margin-bottom-small
  margin-bottom: $margin-small

.margin-bottom-basic
  margin-bottom: $margin-basic

.margin-bottom-mid
  margin-bottom: $margin-mid

.margin-bottom-large
  margin-bottom: $margin-large

  // PADDING TOP

.padding-top-micro
  padding-top: $margin-micro

.padding-top-tiny
  padding-top: $margin-tiny

.padding-top-small
  padding-top: $margin-small

.padding-top-basic
  padding-top: $margin-basic

.padding-top-mid
  padding-top: $margin-mid

.padding-top-large
  padding-top: $margin-large

  // PADDING BOTTOM

.padding-bottom-micro
  padding-bottom: $margin-micro

.padding-bottom-tiny
  padding-bottom: $margin-tiny

.padding-bottom-small
  padding-bottom: $margin-small

.padding-bottom-basic
  padding-bottom: $margin-basic

.padding-bottom-mid
  padding-bottom: $margin-mid

.padding-bottom-large
  padding-bottom: $margin-large

// ******************************************************

// BASIC

#main-content
  padding-top: 50px + $margin-tiny

// ******************************************************

// HEADER

#header-menu
  padding-top: $margin-tiny
  padding-bottom: $margin-micro
  display: none
  li 
    line-height: $font-leading-basic
  
body.menu-active
  #header-menu
    display: block

// ******************************************************

// FOOTER

#footer
  padding: $margin-micro 0
  background-color: $color-white

// ******************************************************

// FRONT PAGE

#front-page
  font-size: $font-size-larger
  
.front-page-block
  display: block
  height: 50vh
  padding: $margin-small
  &:nth-child(1)
    border-bottom: $border
    
.front-page-block-bottom
  display: none

// ******************************************************

// HOME

.home-item
  padding-right: $margin-small
  
// ******************************************************

// PROGRAMACION

body.drawer-open
  #programacion-drawer
    height: auto
  .programacion-drawer-toggle
    display: none
    
.slider-cursor-pagination
  display: none
  
.archive-programacion-post-title
  font-size: 32px
  
// ******************************************************

// CITAS

.page-citas-row
  flex-direction: column-reverse

