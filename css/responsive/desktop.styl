// ******************************************************

// HEADER

#header
   background-color: initial

#header-menu
  padding-top: 0
  padding-bottom: 0
  display: inline-block
  li
    display: inline-block
    line-height: $font-leading-tighter
    &:after
      content: none
    &:before
      content: ', '
    &:first-of-type:before
      content: ''
      
.header-menu-col-unique
  flex: 1 1 46%
  max-width: 46%
  
.desktop-hostname-unique
  flex: 1 1 46%
  max-width: 29%
  
#search-input
  width: 60px

// ******************************************************

// FOOTER
    
body.single-programacion 
  #footer
    .container
      padding: 0

// ******************************************************

$header-height = 60px
$footer-height = 50px

// BASIC

#main-container
  padding-bottom: $footer-height

#main-content
  padding-top: $header-height
      
// ******************************************************

// PROGRAMACION

.archive-programacion-post-title
  font-size: 60px

  // SLIDER
#programacion-slider
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 0
  
.swiper-container
  height: 100%
  top: 0   
  
.swiper-slide
  img 
    max-height: calc("100vh -" 120px)
  .container
    height: 100%
    box-sizing: border-box
    display: flex
    flex-direction: column
    justify-content: center
  .full-slide 
    img
      opacity: 0
    
.full-slide.container
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-size: cover
  background-position: center
    
.slider-cursor-pagination
  display: initial
  position: absolute
  height: 100%
  width: 100%
  top: 0
  left: 0
  z-index: 100
  .cursor-pagination-button
    position: absolute
    width: 50%
    height: 100%
    top: 0
    cursor: pointer
    &.swiper-prev
      left: 0
      cursor: url('../img/dist/ui-cursor-left.png'), w-resize
    &.swiper-next
      right: 0
      cursor: url('../img/dist/ui-cursor-right.png'), e-resize
      
  // DRAWER
    
$drawerHeaderHeight = 61px;
  
.programacion-drawer
  background-color: transparent
  position: fixed
  bottom: 0
  left: 0
  width: 100%
  height: $drawerHeaderHeight
  z-index: 0
  overflow: hidden
  transition: all 200ms linear

.programacion-header
  background-color: transparent
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: auto
  z-index: 400
  
.programacion-drawer-toggle
  cursor: pointer
  display: inline-block
  &:after
    content: '+'
  
.drawer-open
  background-color: $color-white
  .programacion-drawer-toggle
    display: inline-block
    &:after
      content: '\2013'
      
.programacion-content-holder
  position: absolute
  height: auto
  width: 100%
  top: $drawerHeaderHeight
  overflow-y: scroll
  z-index: 300
  
.programacion-content
  column-count: 2
  column-gap: $margin-small

