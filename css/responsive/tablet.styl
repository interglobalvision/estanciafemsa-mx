// GRID

$gutter = 18px

.container
  width: 90%

.col
  width: 100%
  float: none
  margin-left: 0
  margin-right: 0

// ******************************************************

// VARIABLES

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-micro = ($gutter / (2 * $golden-ratio))
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 16px
$font-size-larger = golden-ratio(1rem , 1.3)
$font-size-smaller = 0.8em
$font-size-huge = 4rem

$font-size-h3 = golden-ratio(1rem , 1)
$font-size-h2 = golden-ratio(1rem , 1.5)
$font-size-h1 = golden-ratio(1rem , 2)

$font-leading-basic = 1.35
$font-leading-tighter = 1.15
$font-leading-larger = 1.45

$font-tracking-basic = 0.001em
$font-tracking-wider = 0.05em

// ******************************************************

// TYPOGRAPHY

html
  font-size: $font-size-basic
  letter-spacing: $font-tracking-basic

body
  line-height: $font-leading-basic

  // HTML ELEMENT STYLING

h1
  font-size: $font-size-h1
  font-family: $font-sans
  line-height: $font-leading-tighter

h2
  font-size: $font-size-h2
  font-family: $font-sans
  line-height: $font-leading-tighter

h3
  font-size: $font-size-h3
  font-family: $font-sans

h4.font-sans
  font-size: 1.15rem

p
  margin-bottom: 1rem

  // FONT RULES

.font-larger
  font-size: $font-size-larger

.font-huge
  font-size: $font-size-huge

.font-smaller
  font-size: $font-size-smaller

.font-small-caps
  font-size: 0.85em
  text-transform: uppercase

// ******************************************************

// BASIC

.ui-arrow
  svg
    height: 1rem
    width: 1rem

#main-container
  width: 100%
  margin-bottom: $margin-large + $margin-mid

.only-mobile
  display: initial

.only-desktop
  display: none

// ******************************************************

// MARGINS AND PADDING

  // MARGIN TOP

.margin-top-micro
  margin-top: $margin-micro

.margin-top-tiny
  margin-top: $margin-tiny

.margin-top-small
  margin-top: $margin-small

.margin-top-basic
  margin-top: $margin-basic

.margin-top-mid
  margin-top: $margin-mid

.margin-top-large
  margin-top: $margin-large

  // MARGIN BOTTOM

.margin-bottom-micro
  margin-bottom: $margin-micro

.margin-bottom-tiny
  margin-bottom: $margin-tiny

.margin-bottom-small
  margin-bottom: $margin-small

.margin-bottom-basic
  margin-bottom: $margin-basic

.margin-bottom-mid
  margin-bottom: $margin-mid

.margin-bottom-large
  margin-bottom: $margin-large

  // PADDING TOP

.padding-top-micro
  padding-top: $margin-micro

.padding-top-tiny
  padding-top: $margin-tiny

.padding-top-small
  padding-top: $margin-small

.padding-top-basic
  padding-top: $margin-basic

.padding-top-mid
  padding-top: $margin-mid

.padding-top-large
  padding-top: $margin-large

  // PADDING BOTTOM

.padding-bottom-micro
  padding-bottom: $margin-micro

.padding-bottom-tiny
  padding-bottom: $margin-tiny

.padding-bottom-small
  padding-bottom: $margin-small

.padding-bottom-basic
  padding-bottom: $margin-basic

.padding-bottom-mid
  padding-bottom: $margin-mid

.padding-bottom-large
  padding-bottom: $margin-large

// ******************************************************

// HEADER

.menu-item
  padding: $margin-micro $margin-tiny
  margin: 0 $margin-tiny

// ******************************************************

// SPLASH

#splash
  position: fixed
  width: 100%
  height: 100vh
  top: 0
  left: 0
  color: $color-white-soft
  overflow: hidden
  z-index: 800

#splash-container
  position: absolute
  width: 100%
  height: 100%

#splash-text
  padding: 5%
  min-height: 100vh

#splash-top
  position: absolute
  width: 100%
  top: $margin-small

#splash-bottom
  position: absolute
  width: 100%
  bottom: $margin-small

#scroll-buffer
  position: absolute
  width: 100%
  height: 100%
  top: 0
  left: 0
  z-index: 1000
  pointer-events: none

// ******************************************************

// FRONT PAGE

.home-programacion-height-fix
  min-height: initial

#home-programacion
  .col-4
    min-height: 30vh

#home-programacion-title
  margin-top: $margin-small
  font-size: 5rem


// ******************************************************

// PAGE

.page
  .col-4
    .copy
      max-width: 300px
      margin: 0 auto
    &:first-child
      h3
        margin-top: 0

#page-key-color-image
  min-height: 450px

// ******************************************************

// PROGRAMACION SINGLE

.copy
  h1, h2, h3, h4, h5, h6, blockquote
    text-align: center
    margin-top: $margin-basic
    margin-bottom: $margin-basic

// ******************************************************

// PROGRAMACION ARCHIVE

.index-programacion-post-container
  height: 300px
  max-width: 220px
  margin-left: auto
  margin-right: auto

.index-programacion-post-number
  height: 100%
  width: 100%
  position: absolute
  font-size: golden-ratio(1rem , 3)

// ******************************************************

// SWIPER

.swiper-button-prev, .swiper-button-next
  padding: 0 $margin-small
  svg
    height: .7rem
    width: .5rem

// ******************************************************

// FOOTER

#footer-above
  position: absolute
  top: -2.5rem
  width: 100%

#footer-language-switcher
  position: absolute
  right: $margin-small
  text-align: right
  bottom: .5rem
  width: 10%
  li
    padding-right: $margin-tiny

#footer
  bottom: -120vh
  .col-6
    padding-top: $margin-basic
    padding-bottom: $margin-basic

#footer-inner
  max-height: 100vh
  overflow-x: auto

#subscribe-arrow
  margin-left: - $margin-tiny
  svg
    height: 1.3rem
    width: 1.8rem

#footer-social-links
  li
    padding: 0 $margin-tiny

#footer-text
  max-width: 300px
  margin-left: auto
  margin-right: auto

#footer-contact-text
  max-width: 180px
  margin-left: auto
  margin-right: auto

// ******************************************************