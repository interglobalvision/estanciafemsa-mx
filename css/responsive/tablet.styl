$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-micro = ($gutter / (2 * $golden-ratio))
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

// ******************************************************

// MARGINS AND PADDING

  // MARGIN TOP

.margin-top-micro
  margin-top: $margin-micro

.margin-top-tiny
  margin-top: $margin-tiny

.margin-top-small
  margin-top: $margin-small

.margin-top-basic
  margin-top: $margin-basic

.margin-top-mid
  margin-top: $margin-mid

.margin-top-large
  margin-top: $margin-large

  // MARGIN BOTTOM

.margin-bottom-micro
  margin-bottom: $margin-micro

.margin-bottom-tiny
  margin-bottom: $margin-tiny

.margin-bottom-small
  margin-bottom: $margin-small

.margin-bottom-basic
  margin-bottom: $margin-basic

.margin-bottom-mid
  margin-bottom: $margin-mid

.margin-bottom-large
  margin-bottom: $margin-large

  // PADDING TOP

.padding-top-micro
  padding-top: $margin-micro

.padding-top-tiny
  padding-top: $margin-tiny

.padding-top-small
  padding-top: $margin-small

.padding-top-basic
  padding-top: $margin-basic

.padding-top-mid
  padding-top: $margin-mid

.padding-top-large
  padding-top: $margin-large

  // PADDING BOTTOM

.padding-bottom-micro
  padding-bottom: $margin-micro

.padding-bottom-tiny
  padding-bottom: $margin-tiny

.padding-bottom-small
  padding-bottom: $margin-small

.padding-bottom-basic
  padding-bottom: $margin-basic

.padding-bottom-mid
  padding-bottom: $margin-mid

.padding-bottom-large
  padding-bottom: $margin-large
  
// ******************************************************

// HEADER

#header 
  h1
    font-size: $font-size-h3 

#header-menu
  padding-top: $margin-tiny
  padding-bottom: $margin-micro
  font-size: $font-size-h4
  li 
    line-height: $font-leading-basic

// ******************************************************

// FOOTER

#footer 
  pointer-events: none
  background-color: initial
  font-size: $font-size-h4
  h1
    font-size: $font-size-h3
  h1, .footer-lang-switch
    pointer-events: auto
    
// ******************************************************

// BASIC

#main-content
  padding-top: 74px + $margin-tiny

// ****************************************************** 

// FRONT PAGE

#front-page
  font-size: $font-size-h2
  clearfix()
  .front-page-block
    float: left
    min-height: 50vh
    width: 50%
    padding: $margin-small
    &:nth-child(2n)
      border-left: $border 
    &:nth-child(2)
      border-bottom: $border

// ******************************************************

// HOME

.home-item
  padding-right: $margin-small
  
  
// ******************************************************

// PROGRAMACION

#programacion-slider
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  z-index: 0
  .swiper-container
    height: 100%
    top: 0
    
.full-slide
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-size: cover
  
#programacion-content
  position: fixed
  top: 90%
  left: 0
  width: 100%
  height: 100%
  z-index: 0
  

